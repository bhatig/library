<div style="text-align: right;"><%= link_to "Back", :back  %></div>
<%if can? :manage, Author %>
<h3><%= link_to 'New author', new_author_path %></h3> 
<% end %>
<br>
<table>
  <thead>
    <tr>
      <th colspan="3"><h1>Listing Authors</h1></th>
    </tr>
    <tr>
      <th>Name</th>
      <th>Mobile no</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr >
        <td class="resource_data"><%= author.name %></td>
        <td class="resource_data"><%= author.mobile_no %></td>
        <td class="resource_data"><%= author.email %></td>
        <% if can? :manage, Author %>
          <td class="link_data"><%= link_to 'Show', author %></td>
          <td class="link_data"><%= link_to 'Edit', edit_author_path(author) %></td>
          <td class="link_data"><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

