<div class="btn", style="text-align: right;"><%= link_to "Back", :back  %></div>
<%if can? :manage, Author %>
<div class="well well-sm">
  <h4><%= link_to 'New author', new_author_path %></h4> 
</div>
<% end %>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="3"><h1>Listing Authors</h1></th>
    </tr>
    <tr>
      <th>Name</th>
      <th>Mobile no</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr >
        <td class="resource_data"><%= author.name %></td>
        <td class="resource_data"><%= author.mobile_no %></td>
        <td class="resource_data"><%= author.email %></td>
        <% if can? :manage, Author %>
          <td class="link_data"><div class="btn btn-primary"><%= link_to 'Show', author %></div></td>
          <td class="link_data"><div class="btn btn-primary"><%= link_to 'Edit', edit_author_path(author) %></div></td>
          <td class="link_data"><div class="btn btn-danger"><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

