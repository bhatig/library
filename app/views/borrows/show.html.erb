<div style="text-align: right;", class="btn"><%= link_to "Back", :back  %></div>
<div class="well well-sm">
  <h4>Calculate fine</h4>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Book Title</th>
      <th>User</th>
      <th>issue_date</th>
      <th>due_date</th>
      <th>return date</th>
      <th>Total fine</th>
    </tr>
  </thead>
  <tbody>
      <tr id="user_listing">
        <td class="resource_data"><%= Book.find(@borrow.book_id).title %></td>
        <td class="resource_data"><%= User.find(@borrow.user_id).name %></td>
        <td class="resource_data"><%= @borrow.issue_date %></td>
        <td class="resource_data"><%= @borrow.due_date %></td>
        <td class="resource_data"><%= @borrow.return_date %></td>
        <td class="resource_data"><%= @borrow.fine%></td>       
        <td colspan="4">
          <div class="btn btn-primary">
            <%= link_to 'ok', borrows_path %>
          </div>
        </td>
      </tr>
   </tbody>
</table>
