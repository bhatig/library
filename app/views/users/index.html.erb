<div style="text-align: right;"><%= link_to "Back", :back  %></div>

<br>
<table>
  <thead>
    <tr>
      <th colspan="3"><h1>Listing Users</h1></th>
    </tr>
    <tr>
      <th>Name</th>
      <th>Mobile_no</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr id="user_listing">
        <td class="resource_data"><%= user.name %></td>
        <td class="resource_data"><%= user.mobile_no %></td>
        <td class="resource_data"><%= user.email %></td>
        <% if can? :manage, User %>
          <td class="link_data">
          <%= link_to 'Edit',  edit_user_path(user) %></td>
          <td class="link_data">
           <%= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
