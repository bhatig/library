<div style="text-align: right;", class="btn"><%= link_to "Back", :back  %></div>

  <div class="well well-sm">
    <h4>Listing Users</h4>
  </div>
<table class="table table-hover">
  <thead>
    <tr>
    </tr>
    <tr>
      <th>Name</th>
      <th>Mobile_no</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr id="user_listing">
        <td class="resource_data"><%= user.name %></td>
        <td class="resource_data"><%= user.mobile_no %></td>
        <td class="resource_data"><%= user.email %></td>
        <% if can? :manage, User %>
          <td class="link_data">
            <div class="btn btn-primary">
              <%= link_to 'Edit',  edit_user_path(user) %>
            </div>
          </td>
          <td class="link_data">
            <div class="btn btn-danger"> 
              <%= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
