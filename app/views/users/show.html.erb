<div style="text-align: right;", class=" btn"><%= link_to "Back", :back  %></div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>name</th>
      <th>mobile no</th>
      <th>email</th>
      <th>city</th>
      <th>state</th>
      <th>country</th>
    </tr>
  </thead>

  <tbody>
   
      <tr >
        <td class="resource_data"><%= @user.name %></td>
        <td class="resource_data"><%= @user.mobile_no %></td>
        <td class="resource_data"><%= @user.email %></td>
        <td class="resource_data"><%= @user.addresses.first.city%></td>
        <td class="resource_data"><%= @user.addresses.first.state%></td>  
        <td class="resource_data"><%= @user.addresses.first.country%></td>
        <td class="link_data">
          <div class="btn btn-primary">
            <%= link_to 'Edit', edit_user_registration_path(@user) %>
          </div>
        </td>
        <td class="link_data">
          <div class="btn btn-danger">
            <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
  </tbody>
</table>
